
{{>layout/header}}
<h1>게시판</h1>
<div class="col-md-12">
    <div class ="row">
        {{#user}}
            <div class="col-md-6">
                <a href="/api/v1/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        {{/user}}
    </div>
    <br>

    <!--목록 출력 영역-->
    <table class="table table-horizontal table-bordered">
        <thead class = "thead-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id = "tbody">
        {{#searchList}}
            <tr>
                <td>{{id}}</td>
                <td>
                    <a href="/api/v1/posts/{{id}}">{{title}}</a>
                </td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/searchList}}
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<!-- 검색 후 홈 화면-->
    <nav aria-label="page navigation">
        <ul class="pagination col-md-6">
            <ul class="pagination justify-content-center">
                {{#checkPreviousPage}}
                <li class="page-item"><a class="page-link" tabindex="-1" href="/posts/search?searchType={{searchType}}&keyword={{keyword}}&page={{previous}}">Previous</a></li>
                {{/checkPreviousPage}}
                {{^checkPreviousPage}}
                   <li class="page-item disabled"><a class="page-link" tabindex="-1" href="/posts/search?searchType={{searchType}}&keyword={{keyword}}&page={{previous}}">Previous</a></li>
                {{/checkPreviousPage}}
                {{#checkNextPage}}
                    <li class="page-item"><a class="page-link" href="/posts/search?searchType={{searchType}}&keyword={{keyword}}&page={{next}}">Next</a></li>
                {{/checkNextPage}}
                {{^checkNextPage}}
                    <li class="page-item disabled"><a class="page-link" href="/posts/search?searchType={{searchType}}&keyword={{keyword}}&page={{next
                    }}">Next</a></li>
                {{/checkNextPage}}
            </ul>
        </ul>
    </nav>
<form action="/posts/search" method="get">
    <div class="input-group float-right">
        <select name="searchType">
            <option selected value="TITLE">제목</option>
            <option value="AUTHOR">작성자</option>
        </select>
        <div class = "float-right btn-group" role="group" aria-label="Basic example">
            <input name="keyword" type="text" placeholder="검색어를 입력해주세요">
            <button class="btn btn-secondary">검색</button>
        </div>
    </div>
</form>

