{{>layout/header}}

<h1>게시글 수정</h1>
<br>
<div class = "col-mx-12">
    {{#posts}}
    <div class = "col-md-4">
        <form class = "container" method="post" action="/api/v1/posts/update/{{id}}">
            <input type="hidden" name="_method" value="put">

            <div class="form-group">
                <label for="id" class="font-weight-bold">글 번호</label>
                <input name="id" type="text" class = "form-control" id="id" value="{{id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title" class="font-weight-bold">제목</label>
                <input name="title" type="text" class="form-control" id="article-title" placeholder="수정할 제목명">
            </div>
            <div class="form-group">
                <label for = "author" class="font-weight-bold">작성자</label>
                <input name="author" type="text" class="form-control" id="author" value="{{author}}" readonly>
            </div>
            <div class = "form-group">
                <label for="contents" class="font-weight-bold">내용</label>
             <textarea class="form-control" name="contents" placeholder="수정할 내용"></textarea>
            </div>

            <a href="/api/v1/posts/{{id}}" role="button" class="btn btn-secondary">취소</a>
        <button type="submit" class="btn btn-primary" id="btn-update">수정 완료</button>
        </form>
    </div>
    {{/posts}}
</div>



{{>layout/footer}}
