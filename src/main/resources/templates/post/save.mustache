{{>layout/header}}
<h1>게시글 등록</h1>
<br>
<div class = "col-md-12">
    <div class="col-md-4">
        <form class="container" method="post" action="/api/v1/posts" >
            <div class = "form-group">
                <label for="title">제목</label>
                <!--name과 변수명이 같아야 제대로 전송됨-->
                <input name="title" type="text" class="form-control" id="article-title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">작성자</label><br>
                {{#user}}
                <input type="hidden" name="author" value={{user}}>
                    <span class = "mx-3">{{user}}</span>
                {{/user}}
            </div>
            <div class="form-group">
                <label for="form-label">내용</label>
                <textarea class="form-control" name="contents"  placeholder="내용을 입력하세요"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/" role="button" class="btn btn-primary">취소</a>
        </form>
    </div>
</div>

{{>layout/footer}}