{{>layout/header}}
<br>
<div class = "col-md-12">
    {{#posts}}
    <div class="md-6">
            <div class="m-6 border border-dark rounded"><br>
                <span class ="mx-3   font-weight-bold">제목</span><br><br>
                <span class="mx-4">{{title}}</span><br><br>
            </div>
    <br>
            <div class="m-6 border border-dark rounded"><br>
                <span class ="mx-3 font-weight-bold" >작성자</span><br><br>
               <span class="mx-4">{{author}}</span><br><br>
            </div>
    <br>
            <div class="m-6 border border-dark rounded"><br>
                <span class ="mx-3 font-weight-bold">내용</span><br><br>
                <span class="mx-4">{{contents}}</span><br><br>
            </div>
    <br>
<!-- user만 수정 삭제 가능해야하니까-->
    {{#oauthor}}
    <form  method="post" action="/api/v1/posts/delete/{{id}}">
        <input type="hidden" name="_method" value="delete">
        <a href="/api/v1/posts/update/{{id}}" role="button" class="btn btn-warning">수정</a>
        <button type="submit" class="btn btn-danger">삭제</button>
    </form>
    {{/oauthor}}

    {{/posts}}
    </div>
</div>

{{>layout/footer}}